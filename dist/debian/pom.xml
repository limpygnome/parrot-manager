<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.limpygnome.parrot</groupId>
        <artifactId>dist</artifactId>
        <version>3.1</version>
    </parent>
    <groupId>com.limpygnome.parrot.dist</groupId>
    <artifactId>debian</artifactId>
    <packaging>pom</packaging>

    <build>
        <plugins>

            <!--
                Build structure of deb package
            -->
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <id>create-archive</id>
                        <phase>package</phase>
                        <configuration>
                            <tasks>

                                <!-- Copy pre-made DEBIAN dir -->
                                <copy todir="${project.build.directory}/parrot-manager-${project.version}">
                                    <fileset dir="${project.basedir}/src/main/resources/parrot-manager" />
                                    <filterset>
                                        <filter token="VERSION" value="${project.version}" />
                                    </filterset>
                                </copy>

                                <!-- Copy executable -->
                                <mkdir dir="${project.build.directory}/parrot-manager-${project.version}/usr/bin" />
                                <copy file="${project.basedir}/../../parrot-manager/target/parrot.jar"
                                      tofile="${project.build.directory}/parrot-manager-${project.version}/usr/bin/parrot.jar" />

                                <!-- Copy icon -->
                                <mkdir dir="${project.build.directory}/parrot-manager-${project.version}/usr/share/parrot-manager" />
                                <copy file="${project.basedir}/../../parrot-manager/src/main/resources/icons/parrot-icon-512.png"
                                      tofile="${project.build.directory}/parrot-manager-${project.version}/usr/share/parrot-manager/parrot-icon.png"
                                />

                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!--
                Build deb package
            -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.6.0</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <executable>dpkg</executable>
                    <workingDirectory>${project.build.directory}</workingDirectory>
                    <arguments>
                        <argument>--build</argument>
                        <argument>parrot-manager-${project.version}</argument>
                    </arguments>
                </configuration>
            </plugin>

        </plugins>
    </build>

</project>
