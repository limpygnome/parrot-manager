<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.limpygnome.parrot</groupId>
        <artifactId>dist</artifactId>
        <version>5.0</version>
    </parent>
    <groupId>com.limpygnome.parrot.dist</groupId>
    <artifactId>debian</artifactId>
    <packaging>pom</packaging>

    <build>
        <plugins>

            <!-- build structure for deb package -->
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>create-archive</id>
                        <phase>package</phase>
                        <configuration>
                            <tasks>

                                <!-- Copy pre-made DEBIAN dir -->
                                <copy todir="${project.build.directory}/parrot-manager-linux-${project.version}">
                                    <fileset dir="${project.basedir}/src/main/resources/parrot-manager" />
                                    <filterset>
                                        <filter token="VERSION" value="${project.version}" />
                                    </filterset>
                                </copy>

                                <!-- Copy executable -->
                                <mkdir dir="${project.build.directory}/parrot-manager-linux-${project.version}/usr/bin" />
                                <copy file="${project.basedir}/../../parrot-manager/target/parrot.jar"
                                      tofile="${project.build.directory}/parrot-manager-linux-${project.version}/usr/bin/parrot.jar" />

                                <!-- Copy icon -->
                                <mkdir dir="${project.build.directory}/parrot-manager-linux-${project.version}/usr/share/parrot-manager" />
                                <copy file="${project.basedir}/../../parrot-manager/src/main/resources/icons/parrot-icon-512.png"
                                      tofile="${project.build.directory}/parrot-manager-linux-${project.version}/usr/share/parrot-manager/parrot-icon.png"
                                />

                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- build deb package -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <executable>dpkg</executable>
                    <workingDirectory>${project.build.directory}</workingDirectory>
                    <arguments>
                        <argument>--build</argument>
                        <argument>parrot-manager-linux-${project.version}</argument>
                    </arguments>
                </configuration>
            </plugin>

            <!-- generate MD5 checksum files -->
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <configuration>
                    <exportAntProperties>true</exportAntProperties>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <checksum file="${project.build.directory}/parrot-manager-linux-${project.version}.deb" property="dist.debian.md5" />
                                <echo file="${project.build.directory}/parrot-manager-linux-${project.version}.deb.md5.txt" message="${dist.mac.md5}" />
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- push to github -->
            <plugin>
                <groupId>de.jutzig</groupId>
                <artifactId>github-release-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>release</goal>
                        </goals>
                        <phase>install</phase>
                    </execution>
                </executions>
                <configuration>
                    <releaseName>${project.version}</releaseName>
                    <tag>${project.version}</tag>
                    <fileSets>
                        <fileSet>
                            <directory>${project.build.directory}</directory>
                            <includes>
                                <include>parrot-manager-linux-${project.version}.deb.md5.txt</include>
                                <include>parrot-manager-linux-${project.version}.deb</include>
                            </includes>
                        </fileSet>
                    </fileSets>
                </configuration>
            </plugin>

        </plugins>
    </build>

</project>
