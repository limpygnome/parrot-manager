<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.limpygnome.parrot</groupId>
        <artifactId>dist</artifactId>
        <version>6.0</version>
    </parent>
    <groupId>com.limpygnome.parrot.dist</groupId>
    <artifactId>linux-snaps</artifactId>
    <packaging>pom</packaging>

    <scm>
        <url>${scm.url}</url>
        <connection>${scm.connection}</connection>
        <developerConnection>${scm.connection}</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <build>
        <plugins>

            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <configuration>
                    <exportAntProperties>true</exportAntProperties>
                </configuration>
                <executions>

                    <execution>
                        <id>prepare-snap</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <target>

                                <!-- replace dynamic vars in snapcraft yaml -->
                                <copy todir="${project.basedir}">
                                    <fileset dir="${project.basedir}/src/snapcraft" />
                                    <filterset>
                                        <filter token="VERSION" value="${project.version}" />
                                    </filterset>
                                </copy>

                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>

                    <execution>
                        <id>rename-snap</id>
                        <phase>install</phase>
                        <configuration>
                            <target>
                                <!-- rename for unofficial dist on github -->
                                <move file="${project.basedir}/parrot-manager.snap"
                                      tofile="${project.basedir}/parrot-manager-linux-${project.version}.snap"
                                />
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>

                </executions>
            </plugin>

            <!-- build deb package -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>build-snap</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>snapcraft</executable>
                            <workingDirectory>${project.basedir}</workingDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>release-snap</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>snapcraft</executable>
                            <workingDirectory>${project.basedir}</workingDirectory>
                            <arguments>
                                <argument>snapcraft push --release=parrot-manager.snap</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- push to github -->
            <plugin>
                <groupId>de.jutzig</groupId>
                <artifactId>github-release-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>release</goal>
                        </goals>
                        <phase>install</phase>
                    </execution>
                </executions>
                <configuration>
                    <releaseName>${project.version}</releaseName>
                    <tag>${project.version}</tag>
                    <fileSets>
                        <fileSet>
                            <directory>${project.build.directory}</directory>
                            <includes>
                                <include>parrot-manager-linux-${project.version}.snap</include>
                            </includes>
                        </fileSet>
                    </fileSets>
                </configuration>
            </plugin>

        </plugins>
    </build>

</project>
