<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.limpygnome.parrot</groupId>
        <artifactId>dist</artifactId>
        <version>1.0</version>
    </parent>
    <groupId>com.limpygnome.parrot.dist</groupId>
    <artifactId>github</artifactId>
    <packaging>pom</packaging>

    <scm>
        <url>https://github.com/limpygnome/parrot-manager</url>
        <connection>scm:git:https://github.com/limpygnome/parrot-manager.git</connection>
        <developerConnection>scm:git:https://github.com/limpygnome/parrot-manager.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <build>
        <plugins>

            <!-- Generate MD5 checksums -->
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <configuration>
                    <exportAntProperties>true</exportAntProperties>
                </configuration>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <loadfile srcFile="${project.basedir}/../../changelog/${project.version}.md" property="dist.changelog" />
                                <checksum file="../debian/target/parrot-manager-${project.version}.deb" property="dist.debian.md5" />
                                <checksum file="../jar/target/parrot-jar-${project.version}.tar.gz" property="dist.jar.tar.md5" />
                                <checksum file="../jar/target/parrot-jar-${project.version}.zip" property="dist.jar.zip.md5" />
                                <checksum file="../windows/target/parrot-windows-${project.version}.zip" property="dist.windows.md5" />
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Push artifacts to Github -->
            <plugin>
                <groupId>de.jutzig</groupId>
                <artifactId>github-release-plugin</artifactId>
                <version>1.1.1</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>release</goal>
                        </goals>
                        <phase>install</phase>
                    </execution>
                </executions>
                <configuration>
<description>
Changelog:
${dist.changelog}

MD5 checksums:
* parrot-manager-${project.version}.deb  : ${dist.debian.md5}
* parrot-jar-${project.version}.tar.gz   : ${dist.jar.tar.md5}
* parrot-jar-${project.version}.zip      : ${dist.jar.zip.md5}
* parrot-windows-${project.version}.zip  : ${dist.windows.md5}
</description>
                    <releaseName>${project.version}</releaseName>
                    <tag>${project.version}</tag>
                    <fileSets>
                        <fileSet>
                            <directory>${project.basedir}/..</directory>
                            <includes>
                                <include>debian/target/parrot-manager-${project.version}.deb</include>
                                <include>jar/target/parrot-jar-${project.version}.tar.gz</include>
                                <include>jar/target/parrot-jar-${project.version}.zip</include>
                                <include>windows/target/parrot-windows-${project.version}.zip</include>
                            </includes>
                        </fileSet>
                    </fileSets>
                </configuration>
            </plugin>

        </plugins>
    </build>

</project>
